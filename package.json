{
  "name": "vue-jsx-vapor-ssr",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "SSR=true node server",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build --outDir dist/client --ssrManifest",
    "build:server": "vite build --ssr src/entry-server.ts --outDir dist/server",
    "preview": "NODE_ENV=production node server",
    "check": "tsmc"
  },
  "dependencies": {
    "compression": "^1.8.1",
    "express": "^5.2.1",
    "sirv": "^3.0.2",
    "vue": "3.6.0-beta.3",
    "vue-jsx-vapor": "^3.1.22"
  },
  "devDependencies": {
    "@ts-macro/tsc": "^0.3.7",
    "@types/express": "^5.0.6",
    "@types/node": "^22.19.7",
    "typescript": "~5.7.3",
    "vite": "8.0.0-beta.5"
  }
}
